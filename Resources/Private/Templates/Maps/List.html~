<script>
	$(function() {
		$("#map-table").bootgrid({
		 	formatters: {
		 		"shop": function (column, row){
		 			for (var shop in row) {
		 				if (row.hasOwnProperty(shop)) {
		 					var str =
		 					row.shop.split("|||");
		 						return "<a href=\" " + str[0] + "\" >" + str[1] + "</a>";
						}
					}
				}
			}
		});
		$("#map-table").bootgrid("search","");
	 });

</script>
